{
  "name": "@lagoshny/ngx-validation-messages",
  "version": "0.0.0",
  "description": "This module allows to simplify work with form validator validation messages using single component to display validation messages",
  "readme": "README.md",
  "author": "Ilya Lagoshny <ilya@lagoshny.ru>",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build-prod-win": "ng build --configuration production && npm run copy-files-win",
    "build-publish-win": "npm run build-prod-win && cd dist/ngx-validation-messages && npm publish --tag latest",
    "copy-files-win": "copy .\\README.md .\\dist\\ngx-validation-messages\\ && copy .\\CHANGELOG.md .\\dist\\ngx-validation-messages\\",
    "build-prod-linux": "ng build --configuration production && npm run copy-files-linux",
    "build-publish-linux": "npm run test-flow && npm run build-prod-linux && cd dist/ngx-validation-messages && npm publish --tag latest",
    "copy-files-linux": "cp ./README.md ./CHANGELOG.md ./dist/ngx-validation-messages/",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/material": "^21.0.1",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.1",
    "@angular/cli": "^21.0.1",
    "@angular/compiler-cli": "^21.0.0",
    "jsdom": "^27.1.0",
    "ng-packagr": "^21.0.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  },
  "keywords": [
    "Angular validation",
    "validation",
    "validation messages",
    "form validation",
    "validator",
    "Angular form",
    "template driven form",
    "reactive form",
    "Angular",
    "Angular 12",
    "Angular 13",
    "Angular 14",
    "Angular 15",
    "Angular 16",
    "Angular 17",
    "Angular 18",
    "Angular 19",
    "Angular 20",
    "Angular 21",
    "Material ui"
  ],
  "homepage": "https://github.com/lagoshny/ngx-validation-messages",
  "issues": {
    "url": "https://github.com/lagoshny/ngx-validation-messages/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lagoshny/ngx-validation-messages"
  }
}
